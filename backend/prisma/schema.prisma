generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DevPerfil {
  Junior
  Pleno
  Senior
}

model Usuario {
  id             String    @id @default(uuid())
  nomeCompleto   String
  email          String    @unique
  senha          String
  dataCriacao    DateTime  @default(now())
  ativo          Boolean
  tokenRecuperar String? // Opcional
  tokenExpiracao DateTime? // Opcional
  telefone       String
  imagem         String
  perfis         Perfil[]  @relation("UsuarioPerfis")
}

model Perfil {
  id          String      @id @default(uuid())
  nome        String
  descricao   String
  dataCriacao DateTime    @default(now())
  ativo       Boolean
  permissoes  Permissao[] @relation("PerfilPermissoes")
  grupoId     String
  grupo       GrupoDev    @relation(fields: [grupoId], references: [id])
  usuarios    Usuario[]   @relation("UsuarioPerfis")
}

model Permissao {
  id          String     @id @default(uuid())
  nome        String
  descricao   String
  dataCriacao DateTime   @default(now())
  ativo       Boolean
  perfis      Perfil[]   @relation("PerfilPermissoes")
  grupos      GrupoDev[]
}

model GrupoDev {
  id          String      @id @default(uuid())
  nome        DevPerfil
  descricao   String
  dataCriacao DateTime    @default(now())
  ativo       Boolean
  permissoes  Permissao[]
  perfis      Perfil[]
}
