{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "paths": { "@core/*": ["../../packages/core/src/*"] }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "_tests_"]
}
